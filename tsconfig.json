{
  "compilerOptions": {
    "target": "ES6",
    "lib": [ "es2019", "DOM", "ES6" ,"DOM.Iterable", "ScriptHost"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
